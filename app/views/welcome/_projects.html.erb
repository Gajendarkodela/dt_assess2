 <div class="mt-3 container">
    <div class="text-right">
      <a href="#" id='newproject' class="btn btn-primary mb-3 mr-2" data-toggle="modal" data-target=
      "#newProjectForm">+ New Project</a>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <% @projects.each do |project| %>
            <div class="col-md-3"> 
              <a href="<%=project_path(project)%>" class="text-dark module_list" data-local="true">
                <div class="">
                  <div class="widget-bg-color-icon card-box">
                    <div class="bg-icon bg-icon-success pull-left">
                     <i class="fa fa-file-code-o fa-2x infographic-box colored"></i>
                    </div>
                    <div class="text-right">
                      <h5 class="text-dark m-t-10"><b class="counter">
                        <%=truncate project.name,length:5%></b></h5>
                      <p class="text-muted mb-0 sm-text"><%=project.details%></p>
                    </div>
                    <div class="clearfix"></div>
                  </div>
                </div>
              </a>
            </div>
          <% end %>   
        </div>
      </div>        
    </div>    
    <div class="b-radius-0 fixed-bottom">
      <div class="row">
        <div class="text-left p-3 text-dark container">
          <div class="text-left p-0 text-dark container">
              Per page
            <a href="/welcome/index?no_page=4"> 4</a>
            <a href="/welcome/index?no_page=8"> 8</a>
            <a href="/welcome/index?no_page=12"> 12</a>
            <div class="float-right">
              <%= will_paginate @projects, renderer:WillPaginate::ActionView::Bootstrap4LinkRenderer%>
            </div>
          </div>
        </div>
      </div>   
    </div>
</div>