  <div class="modal-body mx-3">
    <div class="md-form mb-4" >
      <div class="input-group">
        <div class="input-group-addon bg-secondary infield">
          <i class="fa fa-book prefix text-white mt-3 booki"></i>  
        </div>
         <%=form.text_field :title,placeholder:"TestCase name",class:"form-control"%>
       </p>
      </div>
      <div id="error-name" class="text-danger"></div>
    </div>
    <div class="md-form mb-4">
      <div class="input-group">
        <div class="input-group-addon bg-secondary infield">
          <i class="fa fa-hand-o-right prefix text-white mt-3 booki"></i>
        </div>
        <%=form.text_area :description,placeholder:"TestCase description", 
