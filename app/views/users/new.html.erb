<%#if current_user.admin?%> 
<div class="row mt-3">
  <div class="col-lg-2"> </div>
  <div class="col-lg-8">
    <h4 class="m-t-0 header-title p-3"> Create User
          </h4>
     <%= form_for(@user, url:users_admin_index_path(@user)) do |f| %>
    <div class="card-box" style="font-family: apple;">
         
       
          <%if @user.errors.present?%>
            <%#= @user.errors[:password]%>
          <%end%>

          <div class="form-group row">
            <div class="col-lg-3 m-out">
              <span class="float-right">
                <%= f.label :email %>
                <span _ngcontent-c5="" class="red_asterisk">*</span>
              </span>
            </div>
            <div class="col-lg-6">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",required:true %>
              <div class="text-danger"><%= @user.errors[:email][0]%></div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3 m-out">
              <span class="float-right">
                <%= f.label :UserName %>
                <span class="red_asterisk">*</span>
              </span>
            </div>
            <div class="col-lg-6">
              <%= f.text_field :user_name, autofocus: true,class:"form-control",required:true%>
              <div class="text-danger"><%= @user.errors[:user_name][0]%></div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3 m-out">
              <span class="float-right">
                <%= f.label :password %>
                <span class="red_asterisk">*</span>
              </span>
            </div>
            <div class="col-lg-6">
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off" , class:"form-control",required:true %>
              <div class="text-danger"><%= @user.errors[:password][0]%></div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-3 m-out">
              <span class="float-right">
                <%= f.label :password_confirmation %>
                <span class="red_asterisk">*</span> 
              </span> 
            </div>
            <div class="col-lg-6">
              <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control",required:true %>
              <div class="text-danger"><%= @user.errors[:password_confirmation][0]%></div>
            </div>
          </div>
    </div>
    <div class="actions float-right">
           <a class="btn btn-light text-danger" href="<%=users_admin_index_path%>">cancel</a>
           <%= f.submit "save",class:"btn btn-primary m-2" %>
          </div>
        <% end %>
  </div>

 <div class="col-lg-2">
 </div>

 </div>
 <%#end%>