<%= form_with model: @project,id:"my-form" do |form|%>
  <div class="modal-body mx-3">
    <div class="form-group md-form mb-4" >
        <%= form.text_field :name,placeholder:"Project Name(Max length is 6)",class: "form-control field-name", id: "pro",maxlength:"6"%>
      <div id="error-name" class="text-danger"></div>
    </div>
    <div class="md-form mb-4">
        <%= form.number_field :ranking,placeholder:"Ranking", class: "form-control field-ranking"%>
        <div id="error-ranking" class="text-danger"></div>
    </div>
    
    <div class="md-form mb-4">
      <%= form.text_area :details,placeholder: "Details", class: "form-control field-desc", ckeditor: { language: 'uk'}%>    
      <div id="error-details" class="text-danger"></div>
    </div>
    
  </div>   
  <div class="modal-footer d-flex justify-content-center">  
    <%= form.submit class: 'btn btn-primary bdd'%>
  </div>
<%end%>

